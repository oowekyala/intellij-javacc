{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://raw.githubusercontent.com/oowekyala/intellij-javacc/jjtricksjjtricks.schema.json",
  "title": "Schema of jjopts configuration files for JJTricks",
  "type": "object",
  "required": [
    "jjtx"
  ],
  "definitions": {
    "formatter": {
      "type": "string",
      "pattern": "java|none"
    },
    "nodeGenTask": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "formatter": {
          "$ref": "#/definitions/formatter"
        },
        "genClassName": {
          "type": "string"
        },
        "template": {
          "type": "string"
        },
        "templateFile": {
          "type": "string"
        },
        "context": {
          "type": "object"
        }
      }
    },
    "typeHierarchyNode": {
      "type": [
        "string",
        "object"
      ],
      "additionalProperties": {
        "type": [
          "string",
          "array"
        ],
        "items": {
          "$ref": "#/definitions/typeHierarchyNode"
        }
      },
      "minProperties": 1,
      "maxProperties": 1
    }
  },

  "additionalProperties": false,
  "properties": {
    "jjtx": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "nodePrefix": {
          "type": "string"
        },
        "nodePackage": {
          "type": "string"
        },
        "activeGenScheme": {
          "type": "string"
        },
        "templateContext": {
          "type": "object"
        },

        "typeHierarchy": {
          "$ref": "#/definitions/typeHierarchyNode"
        },

        "nodeGenerationSchemes": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": {
              "anyOf": [
                {
                  "$ref": "#/definitions/nodeGenTask"
                },
                {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/nodeGenTask"
                  }
                }
              ]
            }
          }
        },

        "visitors": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "execute": {
                "type": "boolean"
              },
              "templateFile": {
                "type": "string"
              },
              "formatter": {
                "$ref": "#/definitions/formatter"
              },
              "genClassName": {
                "type": "string"
              },
              "context": {
                "type": "object"
              }
            }
          }
        }
      }
    }
  }
}
